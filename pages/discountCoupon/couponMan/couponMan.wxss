/* discountCounpon.wxss */
@import "../../../lib/flexGridStyle.wxss";

.navbar {
  background-color: RGB(247, 247, 247);
  flex: none;  
  display: flex;  
}

.navbar .item{  
  position: relative;   
  text-align: center;  
  font-size: 30rpx;
  line-height: 80rpx; 
  flex: auto;
  color: gray;
  display: inline-block;
  margin-left: 40rpx;
  margin-right: 40rpx;
}  

.navbar .item.active{  
  color: black;
}  

.navbar .item.active:after{  
  content: "";  
  display: block; 
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0; 
  height: 4rpx;  
  background: black;  
} 

.bottomBar {
	background-color: RGB(242, 242, 242);
	text-align: center;
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  border: 0;
  border-radius: 0;
}

.couponContainer {
  height: 1034rpx;
}

button::after {
  border: 0;
}
 
.couponItem {
  display: inline-block;
  width: 96%;
  margin: 2%;
  height: 240rpx;
  background-color: RGB(235, 235, 235);
}

.couponItemFlex {
  display: flex;
  height: 100%
}

.couponItem-left {
  display: flex;
  flex-direction: column;
  width: 240rpx;
  background-color: RGB(242, 242, 242);
  align-items: center;
  justify-content: center;
}

.couponPriceIcon {
  font-size: 25rpx;
}

.couponPriceNum {
  font-weight: border;
  font-size: 70rpx;
}

.couponCondition {
  font-size: 25rpx;
}

.couponItem-middle {
  display: flex;
  flex-direction: column;
  width: 400rpx;
}

.couponItem-middle text {
  padding-left: 10rpx;
}

.couponTitle {
  padding-top:20rpx;
  padding-bottom: 20rpx;
  font-size: 35rpx;
  font-weight: bold;
}

.couponTimeStamp {
  font-size: 25rpx;
}

.couponItem-right {
  display: flex;
  width: 80rpx;
  align-items: center;
  justify-content: center;
}

.couponItem-right text {
  width: 35rpx;
  font-size: 35rpx;
}

.couponContainer scroll-view {
  height: 100%;

}























